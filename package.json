{
  "name": "@d-fischer/shared-utils",
  "version": "2.0.0",
  "description": "",
  "keywords": [],
  "main": "lib",
  "types": "lib",
  "module": "es",
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "import": "./es/index.mjs"
    }
  },
  "sideEffects": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/d-fischer/shared-utils.git"
  },
  "author": "Daniel Fischer <daniel@d-fischer.dev>",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^12.12.14",
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "@d-fischer/eslint-config": "^1.0.4",
    "eslint": "^6.7.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "tsukuru": "^0.3.2"
  },
  "files": [
    "LICENSE",
    "README.md",
    "lib",
    "es"
  ],
  "scripts": {
    "lint": "eslint --ext ts src",
    "prettier:check": "prettier --check 'src/**'",
    "prettier:fix": "prettier --write 'src/**'",
    "build": "tsukuru",
    "rebuild": "tsukuru --clean"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,json}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts}": [
      "eslint --fix",
      "git add"
    ]
  }
}
